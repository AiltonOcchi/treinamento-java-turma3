package br.com.treinamento;

public class SwitchCase {

	public static void main(String[] args) {
		
		int diaSemana = 4;
		
		String diaSemanaTexto = "";
		
		switch (diaSemana) {
		case 1:
			diaSemanaTexto =  "Segunda-feira";
			break;
			
		case 2:
			diaSemanaTexto =  "Terça-feira";
			break;
			
		case 3:
			diaSemanaTexto =  "Terça-feira";
			break;
			
		case 4:
			diaSemanaTexto =  "Terça-feira";
			break;
			
		case 5:
			diaSemanaTexto =  "Terça-feira";
			break;
		case 6:
			diaSemanaTexto =  "Terça-feira";
			break;
			
		case 7:
			diaSemanaTexto =  "Terça-feira";
			
		default:
			diaSemanaTexto = "Dia inválido";
			break;
		}

	}

}
